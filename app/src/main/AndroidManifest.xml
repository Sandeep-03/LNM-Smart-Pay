<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sandeep.lnmsmartpay">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_wallet"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_wallet"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionbar">
        <activity android:name=".StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".DashboardActivity"
            android:label="Welcome"
            android:theme="@style/AppTheme.NoActionbar" />
        <activity
            android:name=".AccountsActivity"
            android:label="Account"
            android:theme="@style/AppTheme.NoActionbar" />
        <activity android:name=".Account_viewActivity" />
        <activity
            android:name=".TransactionActivity"
            android:label="Transactions" />
        <activity
            android:name=".PersonalActivity"
            android:label="Personal Information"
            android:theme="@style/AppTheme.NoActionbar" />
        <activity android:name=".ChangepasswordActivity" />
        <activity
            android:name=".Pending_requests"
            android:label="Pending Requests" />
        <activity android:name=".ExpenditureActivity" />
        <activity android:name=".Forgot_Password"></activity>
    </application>

</manifest>